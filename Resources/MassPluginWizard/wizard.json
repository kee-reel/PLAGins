{
    "version": 1,
    "supportedProjectTypes": [ ],
    "id": "C.MASSPlugin",
    "category": "A.Plugins",

    "trDescription": "Creates common plugin for MASS.",
    "trDisplayName": "Common MASS Plugin",
    "trDisplayCategory": "MASS",
	"icon": "Logo128.png",
	"enabled": "true",

    "options":
    [
        { "key": "TargetPath", "value": "%{Path}" },
		{ "key": "IPath", "value": "%{JS: Util.relativeFilePath('%{InterfacePath}/%{IFileName}', '%{TargetPath}') }" },
        { "key": "IFileName", "value": "i%{JS: Cpp.classToFileName('%{Class}', '%{JS: Util.preferredSuffix('text/x-c++hdr')}')}" },
        { "key": "HdrFileName", "value": "%{JS: Cpp.classToFileName('%{Class}', '%{JS: Util.preferredSuffix('text/x-c++hdr')}')}" },
        { "key": "SrcFileName", "value": "%{JS: Cpp.classToFileName('%{Class}', '%{JS: Util.preferredSuffix('text/x-c++src')}')}" },
        { "key": "HdrPath", "value": "%{Path}/%{HdrFileName}" },
        { "key": "SrcPath", "value": "%{Path}/%{SrcFileName}" },
        { "key": "CN", "value": "%{JS: Cpp.className('%{Class}')}" },
        { "key": "InterfaceName", "value": "I%{CN}" }
    ],

    "pages":
    [
        {
            "trDisplayName": "Define MASS Plugin",
            "trShortTitle": "Details",
            "typeId": "Fields",
            "data" :
            [
                {
                    "name": "Class",
                    "trDisplayName": "Plugin name:",
                    "mandatory": true,
                    "type": "LineEdit",
                    "data":
                    {
                        "trPlaceholder": "How your plugin will be called",
                        "validator": "(?:(?:[a-zA-Z_][a-zA-Z_0-9]*::)*[a-zA-Z_][a-zA-Z_0-9]*|)"
                    }
                },
                {
                    "name": "Description",
                    "trDisplayName": "Plugin description:",
                    "mandatory": true,
                    "type": "LineEdit",
                    "data": { "trPlaceholder": "Few words about your plugin" }
                },
                {
                    "name": "PluginType",
                    "trDisplayName": "Plugin type:\nQObject - logic plugin\nQWidget - QWidget UI plugin\nQML - QML UI plugin",
                    "mandatory": true,
                    "type": "ComboBox",
                    "data":
                    {
                        "items": [ "QObject", "QWidget", "QML" ]
                    }
                },
                {
                    "name": "Path",
                    "type": "PathChooser",
                    "trDisplayName": "Project path:\nMASS-Plugins/[your_repo_folder]/[plugin_folder]",
                    "mandatory": true,
                    "data":
                    {
                        "kind": "existingDirectory",
                        "basePath": "%{InitialPath}",
                        "path": "%{InitialPath}"
                    }
                },
                {
                    "name": "CreateNewInterface",
                    "trDisplayName": "Plugin provides interface",
                    "type": "CheckBox",
                    "data":
                    {
                        "checkedValue": "true",
                        "uncheckedValue": "false",
                        "checked": "false"
                    }
                },
                {
                    "visible": "%{CreateNewInterface}",
                    "name": "InterfacePath",
                    "type": "PathChooser",
                    "trDisplayName": "Interface path:\nMASS-Plugins/Interfaces/[interface_type_folder]",
                    "data":
                    {
                        "kind": "existingDirectory",
                        "basePath": "%{InitialPath}",
                        "path": "%{InitialPath}"
                    }
                }
            ]
        },
        {
            "trDisplayName": "Project Management",
            "trShortTitle": "Summary",
            "typeId": "Summary"
        }
    ],

    "generators":
    [
        {
            "typeId": "File",
            "data":
            [
				{
                    "source": "plugin.h",
                    "target": "%{Path}/plugin.h",
                    "openInEditor": true
                },
                {
                    "source": "plugin.cpp",
                    "target": "%{Path}/plugin.cpp"
                },
                {
                    "source": "i_plugin.h",
                    "target": "%{IPath}",
                    "condition": "%{CreateNewInterface}"
                },
                {
                    "source": "interface_impl.h",
                    "target": "%{HdrPath}",
                    "condition": "%{CreateNewInterface}"
                },
                {
                    "source": "interface_impl.cpp",
                    "target": "%{SrcPath}",
                    "condition": "%{CreateNewInterface}"
                },
                {
                    "source": "PluginMeta.json",
                    "target": "%{Path}/PluginMeta.json"
                },
                {
                    "source": "plugin.pro",
                    "target": "%{Path}/%{CN}.pro",
                    "openAsProject": true
                },
                {
                    "source": "form.ui",
                    "target": "%{Path}/form.ui",
                    "condition": "%{JS: '%{PluginType}' == 'QWidget'}"
                },
                {
                    "source": "form.qml",
                    "target": "%{Path}/form.qml",
                    "condition": "%{JS: '%{PluginType}' == 'QML'}"
                },
                {
                    "source": "res.qrc",
                    "target": "%{Path}/res.qrc",
                    "condition": "%{JS: '%{PluginType}' == 'QML'}"
                }
            ]
        }
    ]
}
